- if paginate
  .row
    .col-md-12
      %ul.pagination
        - prev_article = current_article.previous_article
        - if prev_article
          %li= link_to prev_article.title, prev_article.url
          
        - next_article = current_article.next_article
        - if next_article
          %li= link_to next_article.title, next_article.url