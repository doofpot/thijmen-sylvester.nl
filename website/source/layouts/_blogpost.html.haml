.content-article
  .row
    - page_articles.each_with_index do |article, i|
      .col-md-5.col-sm-5.col-xs-12
        = image_tag("/"+article.path.chomp(".html") + '/thumbnail.jpg', :class => "img-responsive")
      .col-md-7.col-sm-7.col-xs-12
        .blog-post
          %span.label.label-secondary Artikel
          %span.meta-post-date= article.date.strftime('%b %e, %Y') 
          %h2= article.title
          %p= article.summary
          %p= link_to 'Lees verder <i class="fa fa-angle-right"></i>', article, :class => "btn btn-secondary btn-sm"
 
